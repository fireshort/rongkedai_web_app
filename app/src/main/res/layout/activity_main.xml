<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >
    <ImageSwitcher
            android:id="@+id/ad_is"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d1d1d1"
                >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="最新活动"
                    android:id="@+id/website_notice_view"
                    android:drawableLeft="@drawable/found_icon_9"
                    android:layout_marginTop="15dp"
                    style="@style/MainText"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="天天签到"
                    android:id="@+id/signin_tv"
                    android:drawableLeft="@drawable/found_icon_6"
                    android:layout_marginTop="15dp"
                    style="@style/MainText"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hi贷宝"
                    android:id="@+id/borrow_tv"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/found_icon_3"
                    style="@style/MainText"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hi存宝"
                    android:id="@+id/hicunbao_tv"
                    android:drawableLeft="@drawable/found_icon_4"
                    android:layout_marginTop="1dp"
                    style="@style/MainText"
            />

            <TextView
                    android:id="@+id/capital_record_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="投资记录"
                    android:drawableLeft="@drawable/found_icon_2"
                    style="@style/MainText"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="个人账户"
                    android:id="@+id/account_tv"
                    android:drawableLeft="@drawable/found_icon_5"
                    android:layout_marginTop="1dp"
                    style="@style/MainText"
                    />



        </LinearLayout>
    </ScrollView>
</LinearLayout>